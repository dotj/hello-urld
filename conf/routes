# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ShortLinkController.index
POST    /shortlink                  controllers.ShortLinkController.addShortLink
GET     /shortlink                  controllers.ShortLinkController.getShortLinks
GET     /shortlink/by-token/:token  controllers.ShortLinkController.getShortLinkByToken(token)
PUT     /shortlink/by-token/:token  controllers.ShortLinkController.updateShortLinkByToken(token)
DELETE  /shortlink/:id              controllers.ShortLinkController.deleteShortLinkById(id)

# Redirect
GET     /s/:token                   controllers.ShortLinkController.redirectByToken(token)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
